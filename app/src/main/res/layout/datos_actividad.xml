<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="26dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombre_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visita al caixaforum"
            android:textAlignment="textStart"
            android:textSize="20dp"
            android:textAllCaps="true"
            android:fontFamily="@font/ysabeaufont_wght"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fecha_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:fontFamily="@font/poppins"
                android:text="Miercoles, 26 de diciembre"
                android:textAlignment="textStart"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/hora_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:fontFamily="@font/poppins"
                android:text="16:00 - 20:00"
                android:textAlignment="textEnd"
                android:textSize="17.5dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>