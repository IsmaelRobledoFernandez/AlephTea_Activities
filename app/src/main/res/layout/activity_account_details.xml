<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.usuarios.AccountDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn_cambiar_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue_200"
            android:padding="20dp"
            android:text="Cambiar contraseÃ±a"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />

        <Button
            android:id="@+id/btn_cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow_100"
            android:padding="20dp"
            android:text="Cerrar sesion"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_margin="20dp"
            />

        <Button
            android:id="@+id/btn_borrar_cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#D5291D"
            android:padding="20dp"
            android:text="Borrar cuenta"
            android:textSize="20dp"
            android:layout_margin="20dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>